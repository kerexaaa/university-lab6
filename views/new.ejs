<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-
to-fit=no"
    />

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <title>My blog</title>
  </head>

  <body>
    <div class="container">
      <%- include("partials/navbar.ejs") %>
      <form method="post" action="/new">
        <div class="form-group mb-2">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            class="form-control"
            id="title"
            placeholder="Nodejs for beginners"
            required
          />
        </div>
        <div class="form-inline mb-2">
          <label for="category">Category</label>
          <select id="category" name="category" class="form-control">
            <option selected>Development</option>
            <option>Angelopment</option>
            <option>Angleropment</option>
            <option>Messi</option>
          </select>
        </div>
        <div class="form-group mb-2">
          <label for="body">Body</label>
          <textarea
            name="body"
            class="form-control"
            id="body"
            rows="3"
            required
            placeholder="Write down something creative about node js!"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
    </div>
    <!-- JavaScript -->
    <script src="/jquery/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>
